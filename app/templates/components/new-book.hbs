{{#if addNewBook}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveBook'}}>Save</button>
    </form>
  </div>
{{else}}
  <div id=new>
    <button{{action 'bookFormShow'}}>Add New Book</button>
  </div>
{{/if}}
