{{#if addNewBook}}
<p> For Admin use:</p>
  <div>
    <form>
      <div class="form-group">
        <label for="title">title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
